FROM registry.access.redhat.com/ubi9:9.6

SHELL ["/bin/bash", "-c"]

ENV LANG=en_US.UTF-8 \
    LANGUAGE=en_US.UTF-8 \
    LC_ALL=en_US.UTF-8

RUN dnf -y update && \
    dnf -y install \
    bash \
    gcc \
    gcc-c++ \
    make \
    curl \
    htop \
    jq \
    man-db \
    python3 \
    python3-pip \
    python3-virtualenv \
    pipx \
    sudo \
    unzip \
    vim \
    wget \
    rsync \
    glibc-langpack-en \
    git \
    shadow-utils \
    podman \
    slirp4netns \
    fuse-overlayfs \
    iproute \
    && dnf clean all && \
    rm -rf /var/cache/dnf

# Create coder user
RUN useradd coder \
    --create-home \
    --shell=/bin/bash \
    --uid=1000 && \
    echo "coder ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers.d/nopasswd && \
    # Allow rootless podman networking
    echo "coder:100000:65536" >> /etc/subuid && \
    echo "coder:100000:65536" >> /etc/subgid

USER coder
RUN pipx ensurepath && \
    # Alias docker to podman for compatibility
    echo "alias docker=podman" >> ~/.bashrc
